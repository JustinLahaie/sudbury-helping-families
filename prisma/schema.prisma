generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id          String           @id @default(cuid())
  title       String
  description String
  location    String?
  date        DateTime
  time        String?
  type        String           @default("Community Event")
  imageUrl    String?
  published   Boolean          @default(true)
  isPast      Boolean          @default(false)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  timeframes  EventTimeframe[]
}

model EventTimeframe {
  id          String   @id @default(cuid())
  title       String
  description String?
  startTime   String
  endTime     String
  order       Int      @default(0)
  eventId     String
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TimelineSlide {
  id          String   @id @default(cuid())
  year        String
  title       String
  description String
  imageUrl    String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SiteSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DonationImpact {
  id          String   @id @default(cuid())
  amount      String
  title       String
  description String
  icon        String   @default("Gift")
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
