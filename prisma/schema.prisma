generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id          String           @id @default(cuid())
  title       String
  description String
  location    String?
  date        DateTime
  time        String?
  type        String           @default("Community Event")
  imageUrl    String?
  published   Boolean          @default(true)
  isPast      Boolean          @default(false)
  isRaffle    Boolean          @default(false)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  timeframes  EventTimeframe[]
  raffles     Raffle[]
}

model EventTimeframe {
  id          String   @id @default(cuid())
  title       String
  description String?
  startTime   String
  endTime     String
  order       Int      @default(0)
  eventId     String
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TimelineSlide {
  id          String   @id @default(cuid())
  year        String
  title       String
  description String
  imageUrl    String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SiteSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DonationImpact {
  id          String   @id @default(cuid())
  amount      String
  title       String
  description String
  icon        String   @default("Gift")
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model StripeAccount {
  id                String   @id @default(cuid())
  stripeAccountId   String   @unique
  chargesEnabled    Boolean  @default(false)
  detailsSubmitted  Boolean  @default(false)
  email             String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Donation {
  id              String   @id @default(cuid())
  stripeSessionId String   @unique
  amount          Int
  currency        String   @default("cad")
  donorName       String?
  donorEmail      String?
  status          String   @default("pending")
  createdAt       DateTime @default(now())
}

model Raffle {
  id          String        @id @default(cuid())
  title       String
  description String?
  ticketPrice Int           @default(500) // Price in cents (default $5)
  maxTickets  Int?          // Optional max tickets
  startDate   DateTime
  endDate     DateTime
  isActive    Boolean       @default(true)
  winnerId    String?       // RaffleEntry id of winner
  eventId     String?       // Link to an event if applicable
  event       Event?        @relation(fields: [eventId], references: [id])
  entries     RaffleEntry[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model RaffleEntry {
  id              String   @id @default(cuid())
  raffleId        String
  raffle          Raffle   @relation(fields: [raffleId], references: [id], onDelete: Cascade)
  name            String
  email           String
  phone           String?
  ticketCount     Int      @default(1)
  stripeSessionId String?  @unique
  paymentStatus   String   @default("pending") // pending, completed, failed
  createdAt       DateTime @default(now())
}
